<Window x:Class="ArduinoTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoTester"
        mc:Ignorable="d"
        Title="Adruino Tester" Height="450" Width="820"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200">
            </ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Frame x:Name="Mainframe" Background="White" NavigationUIVisibility="Hidden" Grid.Column="1"/>
        <StackPanel Grid.Column="0">
            <TextBlock x:Name="MenuTextBlock" Width="200" Height="120" FontSize="30" Margin="0,0,0,10" FontFamily="Calibri">Menu</TextBlock>
            <Button x:Name="ConfigurationsButton" Content="User Manual" Click="ConfigurationsButton_Click" Style="{DynamicResource MenuButton}"/>
            <Button x:Name="ManualButton" Content="Configurations" Click="ManualButton_Click" Style="{DynamicResource MenuButton}"/>
        </StackPanel>
    </Grid>
</Window>
