<Window x:Class="ArduinoTester.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduinoTester"
        mc:Ignorable="d"
        Title="Edit your cofiguration" Height="450" Width="800"
        Icon="/static_resources/Icon.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <Label x:Name="NamingLabel" Content="Change name" Height="43" Width="350" HorizontalAlignment="Left" FontFamily="Calibri" FontSize="30" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBox x:Name="NamingTextBox" TextWrapping="Wrap" Height="40" Width="300" HorizontalAlignment="Left" FontWeight="Bold" Style="{StaticResource CustomTextBox}" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Label x:Name="DescriptionLabel" Content="Change description"  Height="43" Width="350" HorizontalAlignment="Left" FontFamily="Calibri" FontSize="30" Margin="5,0,0,0"/>
            </StackPanel>
            <StackPanel Grid.Row="3">
                <TextBox x:Name="DescriptionTextBox" TextWrapping="Wrap" Width="450" Height="200" HorizontalAlignment="Left" Style="{StaticResource CustomTextBox}" Margin="5,0,0,0"/>
            </StackPanel>
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Button x:Name="ChangeFileButton" Content="Change File" Height="60" Width="150" Click="ChangeFileButton_Click" Style="{DynamicResource RoundedButton}" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Border BorderThickness="0,0,0,1" BorderBrush="Black" Width="200" HorizontalAlignment="Left">
                        <TextBlock x:Name="FileNameTextBlock" Height="25" Style="{StaticResource SimpleRow}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="7.5*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid>
                    <Image x:Name="SchemeImage" Stretch="Uniform"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Button x:Name="ChangeSchemeButton" Content="Change Scheme" Height="60" Width="150" FontSize="20" HorizontalAlignment="Left" Style="{DynamicResource RoundedButton}" Click="ChangeSchemeButton_Click"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Border BorderThickness="0,0,0,1" BorderBrush="Black" Width="150" HorizontalAlignment="Right" Margin="0,30,5,0">
                        <TextBlock x:Name="SchemeTextBlock" Height="25" Style="{StaticResource SimpleRow}"/>
                    </Border>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="2" VerticalAlignment="Center" Margin="0,0,-50,5">
                <Button x:Name="CancelButton" Content="Cancel" Height="40" Width="90" Click="CancelButton_Click" Style="{DynamicResource NormalButton}"/>
            </StackPanel>
            <StackPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,5">
                <Button x:Name="ConfirmButton" Content="Confirm"  Height="40" Width="90" Click="ConfirmButton_Click" Style="{DynamicResource NormalButton}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
